<UserControl x:Class="MyLibrary.MediaControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <StackPanel Name="Control" Orientation="Horizontal" Background="Azure" Opacity="0.1" HorizontalAlignment="Center" Height="50">
        <StackPanel.Triggers>
            <EventTrigger RoutedEvent="StackPanel.MouseEnter">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="Control"
                                         Storyboard.TargetProperty="Opacity"
                                         To="1"
                                         Duration="0:0:001"
                                         AutoReverse="False"
                                         ></DoubleAnimation>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            
            <EventTrigger RoutedEvent="StackPanel.MouseLeave">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="Control"
                                         Storyboard.TargetProperty="Opacity"
                                         To="0.1"
                                         Duration="0:0:001"
                                         AutoReverse="False"
                                         >
                            </DoubleAnimation>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </StackPanel.Triggers>

        <Button Margin="10,10,10,10" Background="Transparent">
            <Image Source="Images/Stop.png"/>
        </Button>
        
        <Button Content="Rewind" Margin="10,10,10,10" Background="Transparent"/>
        
        <Button Content="Play" Margin="10,10,10,10" Background="Transparent"/>
        <Button Content="Forward" Margin="10,10,10,10" Background="Transparent"/>

        <Button Margin="10,10,10,10" Background="Transparent">
            <Image Source="Images/eject.png"/>
        </Button>
    </StackPanel>
    
</UserControl>
