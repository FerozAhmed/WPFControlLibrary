<UserControl x:Class="MyLibrary.ProgressBarListUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:design="clr-namespace:MyLibrary"
             mc:Ignorable="d" 
             Width="500"
             Height="500"
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance Type=design:DesignProgressBarListItem, IsDesignTimeCreatable=True}"
             x:Name="Root">
    
    <StackPanel>
        <Label Content="{Binding Path=Title}"></Label>

        <ItemsControl ItemsSource="{Binding Path=ItemsSource, ElementName=Root}" BorderBrush="Aqua" BorderThickness="1">
            
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="10,10,10,10" MinWidth="50">
                        <Label Content="{Binding Path=Name}" HorizontalContentAlignment="Center"/>
                        <Image Source="{Binding Path=ImageName}" Width="64" Height="64"/>
                        <ProgressBar Height="10" Minimum="0" Maximum="50" Value="{Binding Path=Value}"/>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        
    </StackPanel>
</UserControl>
